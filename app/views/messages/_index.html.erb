    <% if producer_signed_in? %>
        <h3><%= buyer.company_name %>さんとのチャットルーム</h3>
        <div class="chat-field">
            <% messages.each do |msg| %>
                <!-- メッセージがproducerによるものだったら -->
                <% if msg.is_producer %>
                    <!-- メッセージを右に寄せる -->
                    <div class="row">
                        <div class="col-lg-5 col-lg-offset-5">
                            <div class="right-message">
                                <h4><%= msg.content %></h4><br>
                                <%= l msg.created_at %>
                            </div>
                        </div>
                        <div class="col-lg-offset-9">
                            <%= attachment_image_tag producer, :profile_image, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %><br>
                        </div>
                    </div>
                <!-- メッセージがbuyerによるものだったら -->
