<% provide(:title, "発注一覧") %>
<div class="container">
<h2>発注一覧</h2>
    <div class="buyer-order-index">
    <% @orders.each do |order| %>
        <table border="1">
            <tr>
                <th>発注日</th>
                <th>画像</th>
                <th>品目名</th>
                <th>売価</th>
                <th>数量</th>
                <th>金額</th>
                <th>メモ</th>
                <th>受注状況</th>
            </tr>
            <tr>
                <td>
                    <%= order.created_at.strftime("%Y/%m/%d") %>
                </td>
                <td>
                    <%= attachment_image_tag order.product, :product_image, style: "width:140px; height:120px", class: "img pull-left profile-thumb", fallback: "no_image.jpg" %>
                </td>

                <td>
                    <%= order.product.name%>
                </td>

                <td>
                    <%= order.product.price %>円/kg
                </td>

                <td>
                    <%= order.count %>kg
                </td>
                <td><%= order.payment %>円</td>
                <td style="width: 200px;"><%= order.remark %></td>
                <td><%= order.order_status %></td>
            </tr>
        </table>
    <% end %>
    </div>
    <div class="container" style="text-align: center;">
        <%= paginate @orders %>
    </div>
</div>

