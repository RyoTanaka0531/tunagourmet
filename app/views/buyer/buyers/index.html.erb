<div class="container">
    <h1>バイヤー一覧</h1><br>
    <%= render 'sidebar', search: @search%>

    <% if @results.any? %>
        <% @results.each do |result| %>
        <div class="col-lg-8 col-lg-offset-2">
            <div class="image">
                <%= link_to producer_path(result) do%>
                <%= attachment_image_tag(result, :profile_image, style: "width:150px; height:150px", class: "img-rounded pull-left profile-thumb", fallback: "no_image.jpg")%>
                <% end %>
            </div>
            <div class="col-lg-8">
                <div class="info">
                    <h4><%= link_to result.company_name, producer_path(result) %></h4>
                    <div class="link">
                        <%= link_to "詳細をみる", producer_path(result) %>
                    </div>
                    <strong>プロフィール</strong>
                    <div class="profile" style="width: 30em;">
                        <%= result.description %>
                    </div>
                    <div>
                        <%= result.prefecture%>
                    </div>
                </div>
            </div>
        </div>
        <% end %>
    <% else %>
        <% @buyers.each do |buyer|%>
        <div class="col-lg-8 col-lg-offset-2">
            <div class="image">
                <%= link_to buyer_path(buyer) do%>
                <%= attachment_image_tag(buyer, :profile_image, style: "width:150px; height:150px", class: "img-rounded pull-left profile-thumb", fallback: "no_image.jpg")%>
                <% end %>
            </div>
            <div class="info">
                <div class="col-lg-8">
                    <h4><%= link_to buyer.company_name, buyer_path(buyer) %></h4>
                    <div class="link">
                        <%= link_to "詳細をみる", buyer_path(buyer) %>
                    </div>
                    <strong>プロフィール</strong>
                    <div class="profile" style="width: 30em;">
                        <%= buyer.description %>
                    </div>
                    <div>
                        <%= buyer.prefecture %>
                    </div>
                </div>
            </div>
        </div>
        <% end %>
    <% end %>
</div>