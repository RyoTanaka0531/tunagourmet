<div class="container">
    <h1>生産者一覧</h1><br>
    <%= render 'sidebar', search: @search%>

    <% if @results.any? %>
        <% @results.each do |result| %>
        <div class="col-lg-8 col-lg-offset-2">
            <div class="image">
                <%= link_to producer_path(result) do%>
                <%= attachment_image_tag(result, :profile_image, style: "width:150px; height:150px", class: "img-rounded pull-left profile-thumb", fallback: "no_image.jpg")%>
                <% end %>
            </div>
            <div class="col-lg-8">
                <div class="info">
                    <h4><%= link_to result.company_name, producer_path(result) %></h4>
                    <div class="link">
                        <%= link_to "詳細をみる", producer_path(result) %>
                    </div>
                    <strong>プロフィール</strong>
                    <div class="profile" style="width: 30em;">
                        <%= result.description %>
                    </div>
                    <div>
                        <%= result.prefecture%>
                    </div>
                </div>
            </div>
        </div>
        <% end %>
    <% else %>
        <% @producers.each do |producer|%>
        <div class="col-lg-8 col-lg-offset-2">
            <div class="image">
                <%= link_to producer_path(producer) do%>
                <%= attachment_image_tag(producer, :profile_image, style: "width:150px; height:150px", class: "img-rounded pull-left profile-thumb", fallback: "no_image.jpg")%>
                <% end %>
            </div>
            <div class="col-lg-8">
                <div class="info">
                    <h4><%= link_to producer.company_name, producer_path(producer) %></h4>
                    <div class="link">
                        <%= link_to "詳細をみる", producer_path(producer) %>
                    </div>
                    <strong>プロフィール</strong>
                    <div class="profile" style="width: 30em;">
                        <%= producer.description %>
                    </div>
                    <div>
                        <%= producer.prefecture %>
                    </div>
                </div>
            </div>
        </div>
        <% end %>
    <% end %>
</div>