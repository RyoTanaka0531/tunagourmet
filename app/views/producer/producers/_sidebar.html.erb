<div class="col-lg-2 sidebar h-auto">
    <div class="side-bar">
        <%= search_form_for @search do |f| %>
            <div class="form-group">
                <%= f.label :company_name_cont, "生産者名でさがす"%>
                <%= f.search_field :company_name_cont, class: "form-control", style: "width: 11em;"%>
                <%= f.label :prefecture_cont, "都道府県"%>
                <%= f.select :prefecture_cont, Producer.prefectures.keys, {prompt: "選択してください", class: "form-controll"} %>
            </div>
            <div class="actions">
                <%= f.submit "検索", class:"btn btn-success"%>
            </div>
        <% end %>
    </div>
</div>

