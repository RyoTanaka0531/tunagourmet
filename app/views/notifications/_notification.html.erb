<% visiter = notification.visiter %>
<% post = notification.post %>
<div class="clearfix">
    <% if visiter == @producer %>
        <%= link_to producer_path(notification.visiter) do %>
            <%= attachment_image_tag visiter, :profile_image, :fill, 100,100, format: "jpeg", fallback: "no_image.jpg", size: "50*50"%>
        <% end %>
    <% elsif visiter == @buyer %>
        <%= link_to buyer_path(notification.visiter) do %>
            <%= attachment_image_tag visiter, :profile_image, :fill, 100,100, format: "jpeg", fallback: "no_image.jpg", size: "50*50"%>
        <% end %>
    <% end %>
    <%= notification_form(notification) %><span class="moderate-font"><%= "(#{time_ago_in_words(notification.created_at)}前)"%></span>
    <%= notification_form(notification) %>
    <br>
    <% if !@comment.nil? %>
        <p><%= @comment %></p>
    <% end %>
</div>