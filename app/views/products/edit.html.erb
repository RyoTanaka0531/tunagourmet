<% provide(:title, "品目編集") %>
<% if flash[:notice]%>
    <div class="alert alert-danger text-center">
        <%= flash[:notice] %>
    </div>
<% end %>
<div class="container">
    <h2>品目編集</h2>
    <%= form_for(@product) do |f| %>
    <div class="col-lg-1">
        <div class="prev-contents">
            <% if @product.product_image.present? %>
            <div class="prev-content">
                <%= attachment_image_tag @product, :product_image, style: "width:200px; height:200px", class: "prev-image"%>
            </div>
            <% end %>
        </div>
        <%= f.attachment_field :product_image ,class: "hidden_file"%>
    </div>
    <table>
    <tr>
        <th><%= f.label "品目名" %></th>
        <td><%= f.text_field :name, class: "form-control", placeholder: "15字以内で入力してください" %></td>
    </tr>
    <tr>
        <th><%= f.label "カテゴリー" %></th>
        <td><%= f.collection_select :category_id, Category.all, :id, :name %></td>
    </tr>
    <tr>
        <th><%= f.label "売価" %></th>
        <td><%= f.text_field :price, class: "form-control", placeholder: "半角数字のみ" %>円/kg</td>
    </tr>
    <tr>
        <th><%= f.label "出荷時期" %></th>
        <td><%= f.text_field :timing, class: "form-control", placeholder: "例) 9月中旬〜12月下旬" %></td>
    </tr>
    <tr>
        <th><%= f.label "品目説明" %></th>
        <td><%= f.text_area :description, class: "form-control", placeholder: "例) 無農薬で育てました。" %></td>
    </tr>
    </table>
    <div claas="buttons" style="text-align: center; padding-top: 40px;">
    <%= f.submit "登録する", class: "btn btn-primary", style: "width: 200px; margin-right: 40px;"%>
    <%= link_to "削除する", product_path(@product), method: :delete, class:"btn btn-danger", style: "width: 200px; padding: 10px 30px;" %>
    </div>
    <% end %>
</div>