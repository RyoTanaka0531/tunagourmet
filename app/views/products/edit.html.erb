<div class="container">
    <h2>品目編集</h2>
    <%= form_for(@product) do |f| %>
    <table>
    <tr>
        <th><%= f.label "写真" %></th>
        <td><%= f.attachment_field :product_image %></td>
    </tr>
    <tr>
        <th><%= f.label "品目名" %></th>
        <td><%= f.text_field :name %></td>
    </tr>
    <tr>
        <th><%= f.label "カテゴリー" %></th>
        <td><%= f.collection_select :category_id, Category.all, :id, :name %></td>
    </tr>
    <tr>
        <th><%= f.label "売価" %></th>
        <td><%= f.text_field :price %>円/kg</td>
    </tr>
    <tr>
        <th><%= f.label "出荷時期" %></th>
        <td><%= f.text_field :timing %></td>
    </tr>
    <tr>
        <th><%= f.label "品目説明" %></th>
        <td><%= f.text_field :description %></td>
    </tr>
    </table>
    <%= f.submit "登録する", class: "btn btn-primary"%>
    <%= link_to "削除する", product_path(@product), method: :delete, class:"btn btn-danger" %>
    <% end %>
</div>