<div class="container">
    <div class="error">
        <% if @product.errors.any? %>
        <div id="error_explanation">
            <h3><%= pluralize(@product.errors.count, "error")  %> prohibited this obj being saved:</h3>
            <ul>
                <%= @product.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
        <% end %>
    </div>
    <h2>品目登録</h2>
    <div class="product-form">
    <%= form_for(@product) do |f| %>
    <table style="margin-bottom: 30px;">
    <tr style="margin-bottom: 5px;">
        <th><%= f.label "写真" %></th>
        <td><%= f.attachment_field :product_image %></td>
    </tr>
    <tr>
        <th><%= f.label "品目名" %></th>
        <td><%= f.text_field :name %></td>
    </tr>
    <tr>
        <th><%= f.label "カテゴリー" %></th>
        <td><%= f.collection_select :category_id, Category.all, :id, :name %></td>
    </tr>
    <tr>
        <th><%= f.label "売価" %></th>
        <td><%= f.text_field :price %>円/kg</td>
    </tr>
    <tr>
        <th><%= f.label "出荷時期" %></th>
        <td><%= f.text_field :timing %></td>
    </tr>
    <tr>
        <th><%= f.label "品目説明" %></th>
        <td><%= f.text_field :description %></td>
    </tr>
    </table>
    <%= f.submit "登録する", class: "btn btn-success"%>
    <% end %>
    </div>
        <div class="producer-products">
            <table border="1">
                <tr>
                    <th>写真</th>
                    <th>品目名</th>
                    <th>売価</th>
                    <th>出荷時期</th>
                    <th>説明</th>
                </tr>
                <% @products.each do |product| %>
                <tr>
                    <td style="width: 120px; height:90px;"><%= attachment_image_tag(product, :product_image, style: "width:120px; height:90px", class: "pull-left profile-thumb", fallback: "no_image.jpg") %></td>
                    <td><%= product.name %></td>
                    <td><%= product.price%>円/kg</td>
                    <td><%= product.timing%></td>
                    <td><%= product.description%></td>
                    <td><%= link_to "編集する", edit_product_path(product) %></td>
                    <td><%= link_to "削除する", product_path(product), method: :delete %></td>
                </tr>
                <% end %>
            </table>
        </div>
</div>