<h2>品目登録</h2>
<%= form_for(@product) do |f| %>
<table>
<tr>
    <th><%= f.label "品目名" %></th>
    <td><%= f.text_field :name %></td>
</tr>
<tr>
    <th><%= f.label "売価" %></th>
    <td><%= f.text_field :price %>円/kg</td>
</tr>
<tr>
    <th><%= f.label "出荷時期" %></th>
    <td><%= f.text_field :timing %></td>
</tr>
<tr>
    <th><%= f.label "品目説明" %></th>
    <td><%= f.text_field :description %></td>
</tr>
</table>
<%= f.submit "登録する"%>
<% end %>