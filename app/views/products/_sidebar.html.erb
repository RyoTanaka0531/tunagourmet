<div class="col-lg-2 sidebar h-auto">
    <div class="side-bar">
        <%= search_form_for @search do |f| %>
            <div class="form-group">
                <%= f.label :name_cont, "品目名でさがす"%>
                <%= f.search_field :name_cont, class: "form-control", style: "width: 11em;"%>
                <%= f.label :category_id_eq, "カテゴリー検索"%>
                <%= f.collection_select(:category_id_eq, Category.all, :id, :name, :include_blank => '指定なし') %>
            </div>
            <div class="actions">
                <%= f.submit "検索", class: "btn btn-success"%>
            </div>
        <% end %>
    </div>
</div>