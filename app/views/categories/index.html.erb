<div class="container">
    <h1>カテゴリー一覧</h1>
    <%= form_for(@category) do |f| %>
        <%= f.label "カテゴリー名"%>
        <%= f.text_field :name %>
        <%= f.submit "登録"%>
    <% end %>

        <table>
            <tr>
            <th>カテゴリー</th>
            </tr>
            <% @categories.each do |category| %>
            <tr>
            <td><%= category.name %></td>
            </tr>
            <% end %>
        </table>
</div>